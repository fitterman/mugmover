            <img src="https://upload.wikimedia.org/wikipedia/en/6/6f/Smiley_Face.png" style="height:30px" />
          </div>
          <div class="col-xs-10" style="padding-left: 0;">
            <%- name.get('public_name') %>
            <div class="namenote">
              <%- name.get('note') %>
            </div>
          </div>
        </div>
    <% }); %>
  </script>

