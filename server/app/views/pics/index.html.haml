                                        {
                                          // We calculate the average width and height of visible faces
                                          var faces = $scope.photo.notes;
                                          var sumW = 0;
                                          var sumH = 0;
                                          var meanWidth = 0;
                                          var meanHeight = 0;
                                          var minFaceDimension = 50; /* Pixels */
                                          var n = 0;
                                          for (var i = 0; i < faces.length; i++)
                                          {
                                            // Skip the deleted faces
                                            if (!faces[i].deleted)
                                            {
                                              sumW += faces[i].w;
                                              sumH += faces[i].h;
                                              n += 1;
                                            }
                                          }
                                          if (n > 0)
